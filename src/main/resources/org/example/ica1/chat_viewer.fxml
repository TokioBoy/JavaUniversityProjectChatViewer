<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.TextFlow?>

<BorderPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ica1.ChatViewerController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Button onAction="#openFile" text="Open File" />
            <Label fx:id="filePathLabel" text="No file selected" />
        </HBox>
    </top>

    <center>
        <ScrollPane hbarPolicy="ALWAYS">
            <TextFlow fx:id="chatTextFlow" />
        </ScrollPane>


    </center>

</BorderPane>
